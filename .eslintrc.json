{
  "env": {
    "node": true
  },
  "extends": ["airbnb-base", "eslint:recommended", "plugin:node/recommended", "plugin:promise/recommended", "plugin:import/errors", "plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": ["json", "promise", "import", "prettier"],
  "rules": {
    "no-await-in-loop": 0,
    "no-console": 0,
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      }
    }
  }
}